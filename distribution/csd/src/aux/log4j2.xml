<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{ISO8601} %p [%t] %c - %m%n"/>
    </Console>

    <RollingFile name="RFA"
                 fileName="{{LOG4J2_LOG_DIR}}/{{LOG4J2_LOG_FILE}}"
                 filePattern="{{LOG4J2_LOG_DIR}}/{{LOG4J2_LOG_FILE}}-%d{MM-dd-yyyy}-%i.log.gz">
      <PatternLayout>
        <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy/>
        <SizeBasedTriggeringPolicy size="{{LOG4J2_MAX_SIZE}}"/>
      </Policies>
      <DefaultRolloverStrategy max="{{LOG4J2_MAX_BACKUPS}}"/>
    </RollingFile>
  </Appenders>

  <Loggers>
    <Root level="{{LOG4J2_THRESHOLD}}">
      <AppenderRef ref="Console"/>
      <Appender-ref ref="RFA"/>
    </Root>
  </Loggers>
</Configuration>
